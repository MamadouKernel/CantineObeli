@model Obeli_K.Models.ViewModels.CommandeListViewModel

@{
    ViewData["Title"] = "Détails de la Commande";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle text-warning me-2"></i>
                        Détails de la Commande
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-shopping-cart me-2"></i>
                                        Informations Générales
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Code Commande :</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-secondary fs-6">@Model.CodeCommande</span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Date de Commande :</strong></div>
                                        <div class="col-sm-8">@Model.Date.ToString("dddd dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Statut :</strong></div>
                                        <div class="col-sm-8">
                                            @switch (Model.StatusCommande)
                                            {
                                                case Obeli_K.Enums.StatutCommande.Precommander:
                                                    <span class="badge bg-warning fs-6">Précommandée</span>
                                                    break;
                                                case Obeli_K.Enums.StatutCommande.Consommee:
                                                    <span class="badge bg-success fs-6">Consommée</span>
                                                    break;
                                                case Obeli_K.Enums.StatutCommande.Annulee:
                                                    <span class="badge bg-danger fs-6">Annulée</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary fs-6">Précommandée</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Type de Menu :</strong></div>
                                        <div class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.TypeFormuleNom))
                                            {
                                                <span class="badge bg-info fs-6">@Model.TypeFormuleNom</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Non spécifié</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Plat Commandé :</strong></div>
                                        <div class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.NomPlat))
                                            {
                                                <strong class="text-primary">@Model.NomPlat</strong>
                                            }
                                            else if (!string.IsNullOrEmpty(Model.FormuleNom))
                                            {
                                                <strong class="text-primary">@Model.FormuleNom</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Non spécifié</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Période :</strong></div>
                                        <div class="col-sm-8">
                                            @switch (Model.PeriodeService)
                                            {
                                                case Obeli_K.Enums.Periode.Jour:
                                                    <span class="badge bg-primary fs-6">Jour</span>
                                                    break;
                                                case Obeli_K.Enums.Periode.Nuit:
                                                    <span class="badge bg-dark fs-6">Nuit</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary fs-6">@Model.PeriodeService</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                    @* <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Quantité :</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-secondary fs-6">@Model.Quantite</span>
                                        </div>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-user me-2"></i>
                                        Informations Client
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.UtilisateurNomComplet))
                                    {
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Type :</strong></div>
                                            <div class="col-sm-8">
                                                <span class="badge bg-primary fs-6">Utilisateur CIT</span>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Nom :</strong></div>
                                            <div class="col-sm-8">@Model.UtilisateurNomComplet</div>
                                        </div>
                                    }
                                    else if (!string.IsNullOrEmpty(Model.GroupeNonCitNom))
                                    {
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Type :</strong></div>
                                            <div class="col-sm-8">
                                                <span class="badge bg-info fs-6">Groupe Non-CIT</span>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Groupe :</strong></div>
                                            <div class="col-sm-8">@Model.GroupeNonCitNom</div>
                                        </div>
                                    }
                                    else if (!string.IsNullOrEmpty(Model.VisiteurNom))
                                    {
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Type :</strong></div>
                                            <div class="col-sm-8">
                                                <span class="badge bg-success fs-6">Visiteur</span>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4"><strong>Nom :</strong></div>
                                            <div class="col-sm-8">@Model.VisiteurNom</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(Model.VisiteurTelephone))
                                        {
                                            <div class="row mb-3">
                                                <div class="col-sm-4"><strong>Téléphone :</strong></div>
                                                <div class="col-sm-8">@Model.VisiteurTelephone</div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-muted">Aucune information client disponible</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Boutons d'action pour les prestataires et administrateurs *@
                    @if (User.IsInRole("PrestataireCantine") || User.IsInRole("Administrateur"))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-warning">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-cogs me-2"></i>
                                            Actions
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            @if (Model.StatusCommande != Obeli_K.Enums.StatutCommande.Consommee)
                                            {
                                                <div class="col-md-4">
                                                    <form asp-action="ValiderCommande" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@Model.IdCommande" />
                                                        <button type="submit" class="btn btn-success w-100" 
                                                                onclick="return confirm('Confirmer la validation de cette commande ?')">
                                                            <i class="fas fa-check-circle me-2"></i>
                                                            Valider
                                                        </button>
                                                    </form>
                                                </div>
                                                <div class="col-md-4">
                                                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#annulerModal">
                                                        <i class="fas fa-times-circle me-2"></i>
                                                        Annuler
                                                    </button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-md-8">
                                                    <div class="alert alert-success text-center">
                                                        <i class="fas fa-check-circle me-2"></i>
                                                        Commande déjà validée
                                                    </div>
                                                </div>
                                            }
                                            <div class="col-md-4">
                                                <a asp-action="VerifierCommande" class="btn btn-secondary w-100">
                                                    <i class="fas fa-times me-2"></i>
                                                    Fermer
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal pour l'annulation avec motif *@
@if (User.IsInRole("PrestataireCantine") || User.IsInRole("Administrateur"))
{
    <div class="modal fade" id="annulerModal" tabindex="-1" aria-labelledby="annulerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="annulerModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Annuler la Commande
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AnnulerCommande" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.IdCommande" />
                        <div class="mb-3">
                            <label for="motif" class="form-label">Motif d'annulation :</label>
                            <select id="motif" name="motif" class="form-select" required>
                                <option value="">Sélectionner un motif</option>
                                <option value="Repas indisponible">Repas indisponible</option>
                                <option value="Finir">Finir</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>
                            Fermer
                        </button>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-check me-1"></i>
                            Confirmer l'annulation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
