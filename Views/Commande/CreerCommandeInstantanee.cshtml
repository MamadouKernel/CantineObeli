            console.log('🔄 Chargement des menus via AJAX...');
                fetch('/Commande/GetMenus')
                    .then(response => {
                        console.log('📡 Réponse reçue:', response.status);
                        if (!response.ok) {
                            throw new Error(`HTTP ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(menus => {
                        console.log('🍽️ Menus reçus:', menus);
                        
                    // Garder l'option par défaut et ajouter les nouvelles options
                    const defaultOption = selectedMenu.querySelector('option[value=""]');
                    selectedMenu.innerHTML = '';
                    if (defaultOption) {
                        selectedMenu.appendChild(defaultOption);
                    } else {
                        selectedMenu.innerHTML = '<option value="">-- Sélectionnez un menu --</option>';
                    }
                        
                        if (menus && Array.isArray(menus) && menus.length > 0) {
                            menus.forEach((menu, index) => {
                                const option = document.createElement('option');
                                option.value = menu.id;
                                option.textContent = menu.nom;
                                selectedMenu.appendChild(option);
                            });
                        console.log(`✅ ${menus.length} menus chargés via AJAX`);
                        } else {
                        const noMenuOption = document.createElement('option');
