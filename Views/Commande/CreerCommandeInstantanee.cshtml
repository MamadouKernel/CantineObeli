                                    <div class="row g-4">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label">
                                                    <i class="fas fa-id-card"></i>
                                                    Matricule
                                                </label>
                                                <input type="text" id="userMatricule" class="form-control" placeholder="Entrez le matricule de l'utilisateur" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label">
                                                    <i class="fas fa-utensils"></i>
                                                    Menu du Jour
                                                </label>
                                                <select id="selectedMenu" class="form-control">
                                                    <option value="">Sélectionnez un menu</option>
                                                    @if (ViewBag.FormulesAujourdhui != null)
                                                    {
                                                        @foreach (var item in ViewBag.FormulesAujourdhui)
