@model Obeli_K.Models.ViewModels.CreerCommandeInstantaneeViewModel

@{
    ViewData["Title"] = "Créer une Commande Instantanée";
}

<style>
    /* Design moderne et élégant */
    :root {
        --primary-gold: #EDAC00;
        --primary-gold-light: #f4d03f;
        --primary-gold-dark: #d4b800;
        --secondary-blue: #2563eb;
        --secondary-blue-light: #3b82f6;
        --success-green: #10b981;
        --success-green-light: #34d399;
        --neutral-50: #f8fafc;
        --neutral-100: #f1f5f9;
        --neutral-200: #e2e8f0;
        --neutral-300: #cbd5e1;
        --neutral-400: #94a3b8;
        --neutral-500: #64748b;
        --neutral-600: #475569;
        --neutral-700: #334155;
        --neutral-800: #1e293b;
        --neutral-900: #0f172a;
    }

    body {
        background: linear-gradient(135deg, var(--neutral-50) 0%, var(--neutral-100) 100%);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .instant-order-container {
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }
    
    .instant-order-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(237, 172, 0, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(37, 99, 235, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(16, 185, 129, 0.02) 0%, transparent 50%);
        pointer-events: none;
    }

    .main-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 32px;
        box-shadow: 
            0 25px 50px -12px rgba(0, 0, 0, 0.08),
            0 0 0 1px rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        overflow: hidden;
        position: relative;
    }

    .header-section {
        background: linear-gradient(135deg, var(--primary-gold) 0%, var(--primary-gold-light) 50%, #ffd700 100%);
        color: var(--neutral-900);
        padding: 4rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .header-section::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: 
            radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%),
            linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
        animation: shimmer 6s ease-in-out infinite;
    }

    @@keyframes shimmer {
        0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
        50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
    }

    .header-content {
        position: relative;
        z-index: 2;
    }

    .header-content h1 {
        font-weight: 900;
        font-size: 3.5rem;
        margin-bottom: 1rem;
        text-shadow: 0 4px 8px rgba(0,0,0,0.1);
        background: linear-gradient(135deg, var(--neutral-900) 0%, var(--neutral-700) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
    }

    .header-content p {
        font-size: 1.25rem;
        font-weight: 600;
        opacity: 0.9;
        color: var(--neutral-700);
    }

    .form-section {
        padding: 4rem;
        background: transparent;
        position: relative;
    }

    .floating-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        padding: 3rem;
        margin-bottom: 2rem;
        box-shadow: 
            0 10px 25px -5px rgba(0, 0, 0, 0.1),
            0 4px 6px -2px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .floating-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gold), var(--primary-gold-light), var(--primary-gold));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .floating-card:hover {
        transform: translateY(-8px);
        box-shadow: 
            0 20px 40px -12px rgba(0, 0, 0, 0.15),
            0 8px 16px -8px rgba(0, 0, 0, 0.1);
        border-color: rgba(237, 172, 0, 0.3);
    }

    .floating-card:hover::before {
        opacity: 1;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--neutral-800);
        margin-bottom: 2rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .card-title i {
        color: var(--primary-gold);
        font-size: 1.75rem;
    }

    .form-group {
        margin-bottom: 2rem;
    }
    
    .form-label {
        font-weight: 700;
        color: var(--neutral-700);
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        font-size: 1rem;
        letter-spacing: 0.025em;
        gap: 0.75rem;
    }

    .form-label i {
        color: var(--primary-gold);
        font-size: 1.25rem;
        width: 24px;
        text-align: center;
    }

    .form-control, .form-select {
        border: 2px solid var(--neutral-200);
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        box-shadow: 0 2px 4px -1px rgba(0, 0, 0, 0.05);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary-gold);
        box-shadow: 
            0 0 0 4px rgba(237, 172, 0, 0.1),
            0 8px 16px -4px rgba(0, 0, 0, 0.1);
        background: rgba(255, 255, 255, 0.95);
        outline: none;
        transform: translateY(-2px);
    }

    .form-control:hover, .form-select:hover {
        border-color: var(--primary-gold);
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.1);
    }

    .btn-confirm {
        background: linear-gradient(135deg, var(--success-green) 0%, var(--success-green-light) 100%);
        border: none;
        border-radius: 16px;
        padding: 1.25rem 3rem;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: white;
        box-shadow: 
            0 8px 16px -4px rgba(16, 185, 129, 0.4),
            0 4px 8px -2px rgba(16, 185, 129, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-confirm::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.6s;
    }

    .btn-confirm:hover {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        transform: translateY(-3px);
        box-shadow: 
            0 12px 24px -4px rgba(16, 185, 129, 0.5),
            0 6px 12px -2px rgba(16, 185, 129, 0.4);
    }

    .btn-confirm:hover::before {
        left: 100%;
    }

    .btn-secondary {
        background: linear-gradient(135deg, var(--neutral-500) 0%, var(--neutral-600) 100%);
        border: none;
        border-radius: 16px;
        padding: 1.25rem 3rem;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        color: white;
        box-shadow: 0 8px 16px -4px rgba(107, 114, 128, 0.3);
    }

    .btn-secondary:hover {
        background: linear-gradient(135deg, var(--neutral-600) 0%, var(--neutral-700) 100%);
        transform: translateY(-3px);
        box-shadow: 0 12px 24px -4px rgba(107, 114, 128, 0.4);
    }

    .alert {
        border: none;
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 2rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .alert-danger {
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
        color: #dc2626;
        border-left: 4px solid #ef4444;
    }

    .alert-success {
        background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        color: #16a34a;
        border-left: 4px solid #22c55e;
    }

    .alert-info {
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        color: #2563eb;
        border-left: 4px solid #3b82f6;
    }

    .debug-info {
        background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
        border: 2px solid rgba(139, 92, 246, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        font-family: 'JetBrains Mono', 'Fira Code', monospace;
        font-size: 0.9rem;
        backdrop-filter: blur(10px);
    }

    .debug-info strong {
        color: #7c3aed;
        font-weight: 700;
    }

    .return-link {
        color: var(--secondary-blue);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .return-link:hover {
        color: var(--secondary-blue-light);
        transform: translateX(-2px);
    }

    .instruction-text {
        color: var(--neutral-500);
        font-size: 0.9rem;
        font-style: italic;
    }

    /* Animations subtiles */
    .form-control, .form-select, .btn-confirm, .btn-secondary {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .instant-order-container {
            padding: 1rem 0;
        }
        
        .form-section {
            padding: 2rem 1.5rem;
        }
        
        .header-section {
            padding: 3rem 1.5rem;
        }
        
        .header-content h1 {
            font-size: 2.5rem;
        }
        
        .floating-card {
            padding: 2rem;
            margin-bottom: 1.5rem;
        }
        
        .btn-confirm, .btn-secondary {
            padding: 1rem 2rem;
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .header-content h1 {
            font-size: 2rem;
        }
        
        .floating-card {
            padding: 1.5rem;
        }
        
        .form-control, .form-select {
            padding: 1rem 1.25rem;
        }
    }
</style>

<div class="instant-order-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-xl-12">
                
