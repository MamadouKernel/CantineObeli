                                    <button type="submit" class="btn btn-confirm">
                                        <i class="fas fa-bolt me-2"></i>
                                        Créer la commande instantanée
                                    </button>
                                </div>
                            </div>
                            }
                                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Variables globales
        let currentUserId = null;
        let currentUserName = null;
        
        // Initialisation quand le DOM est prêt
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 DOM chargé - Initialisation de la page Commande Instantanée');
            console.log('👤 Rôles utilisateur:', @Html.Raw(Json.Serialize(User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))));
            console.log('📊 Formules dans ViewBag:', @((ViewBag.FormulesAujourdhui as Microsoft.AspNetCore.Mvc.Rendering.SelectList)?.Count() ?? 0));
            
            // Initialiser les éléments
            initializeElements();
            
            // Charger les menus
            loadMenuOptions();
            
            // Initialiser la recherche par matricule pour Admin
            initializeMatriculeSearch();
        });
        
        // Fonction pour initialiser la recherche par matricule (Admin)
        function initializeMatriculeSearch() {
            const userMatriculeAdmin = document.getElementById('userMatriculeAdmin');
            const hiddenUtilisateurId = document.getElementById('hiddenUtilisateurId');
            const userInfo = document.getElementById('userInfo');
            const userNameDisplay = document.getElementById('userNameDisplay');
            
            if (!userMatriculeAdmin || !hiddenUtilisateurId) return;
            
            // Recherche avec délai (debounce)
            let searchTimeout;
            userMatriculeAdmin.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                const matricule = this.value.trim();
                
                if (matricule.length < 2) {
