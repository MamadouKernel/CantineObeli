@model Obeli_K.Models.ViewModels.PagedViewModel<Obeli_K.Models.ViewModels.FormuleJourViewModel>

@{
    ViewData["Title"] = "Gestion des Formules";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- Header responsive -->
                <div class="card-header">
                    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-utensils text-warning me-2"></i>
                            <span class="d-none d-sm-inline">Gestion des Formules</span>
                            <span class="d-sm-none">Formules</span>
                            @if (ViewBag.SemaineSuivante == true)
                            {
                                <span class="badge bg-success ms-2">Semaine N+1</span>
                            }
                        </h3>
                        <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100 w-lg-auto">
                            <div class="btn-group w-100 w-sm-auto" role="group">
                                <a asp-action="Create" class="btn btn-warning">
                                    <i class="fas fa-plus me-1"></i>
                                    <span class="d-none d-sm-inline">Nouvelle </span>Formule
                                </a>
                                <a asp-action="Import" class="btn btn-info">
                                    <i class="fas fa-file-import me-1"></i>
                                    <span class="d-none d-sm-inline">Importer</span>
                                    <span class="d-sm-none">Import</span>
                                </a>
                            </div>
                            
                            <!-- Actions secondaires - masquées sur mobile -->
                            <div class="btn-group d-none d-md-flex" role="group">
                                <a asp-action="Index" asp-route-semaineSuivante="true" class="btn btn-success">
                                    <i class="fas fa-calendar-week me-1"></i>
                                    Semaine N+1
                                </a>
                                <a asp-action="ExportExcel" 
                                   asp-route-dateDebut="@ViewBag.DateDebut" 
                                   asp-route-dateFin="@ViewBag.DateFin" 
                                   asp-route-semaineSuivante="@ViewBag.SemaineSuivante" 
                                   class="btn btn-success">
                                    <i class="fas fa-file-excel me-1"></i>
                                    Export Excel
                                </a>
                            </div>
                            
                            <!-- Sélecteur de taille de page - masqué sur mobile -->
                            <div class="d-none d-lg-flex align-items-center">
                                <label for="pageSize" class="form-label me-2 mb-0 small text-nowrap">Par page:</label>
                                <select id="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                                    <option value="5" selected="@(Model.Pagination.PageSize == 5)">5</option>
                                    <option value="10" selected="@(Model.Pagination.PageSize == 10)">10</option>
                                    <option value="25" selected="@(Model.Pagination.PageSize == 25)">25</option>
                                <option value="50" selected="@(Model.Pagination.PageSize == 50)">50</option>
                                <option value="100" selected="@(Model.Pagination.PageSize == 100)">100</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Filtres -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="date-filters-container">
                                <form method="get" class="row g-3 align-items-end">
                                    <div class="col-md-4">
                                        <div class="date-input-container">
                                            <label for="dateDebut" class="form-label">
                                                <i class="fas fa-calendar-day"></i>
                                                Date de début
                                            </label>
                                            <input type="date" class="form-control" id="dateDebut" name="dateDebut" value="@ViewBag.DateDebut">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="date-input-container">
                                            <label for="dateFin" class="form-label">
                                                <i class="fas fa-calendar-day"></i>
                                                Date de fin
                                            </label>
                                            <input type="date" class="form-control" id="dateFin" name="dateFin" value="@ViewBag.DateFin">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="date-action-buttons">
                                            <button type="submit" class="btn-search">
                                                <i class="fas fa-search"></i>
                                                Rechercher
                                            </button>
                                            <a asp-action="Index" class="btn-clear">
                                                <i class="fas fa-times"></i>
                                                Effacer
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @if (Model != null && Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Nom</th>
                                        <th>Type</th>
                                        <th>Formule Améliorée</th>
                                        <th>Formule Standard 1</th>
                                        <th>Formule Standard 2</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var formule in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@formule.Date.ToString("dd/MM/yyyy")</strong><br>
                                                <small class="text-muted">@formule.Date.ToString("dddd", new System.Globalization.CultureInfo("fr-FR"))</small>
                                            </td>
                                            <td>@formule.NomFormule</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(formule.TypeFormuleNom))
                                                {
                                                    <span class="badge bg-info">@formule.TypeFormuleNom</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non défini</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(formule.Plat) || !string.IsNullOrEmpty(formule.Entree))
                                                {
                                                    <div class="small">
                                                        @if (!string.IsNullOrEmpty(formule.Entree))
                                                        {
                                                            <div><strong>Entrée:</strong> @formule.Entree</div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(formule.Plat))
                                                        {
                                                            <div><strong>Plat:</strong> @formule.Plat</div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(formule.Garniture))
                                                        {
                                                            <div><strong>Garniture:</strong> @formule.Garniture</div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(formule.Dessert))
                                                        {
                                                            <div><strong>Dessert:</strong> @formule.Dessert</div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non définie</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(formule.PlatStandard1))
                                                {
                                                    <div class="small">
                                                        <div><strong>Plat:</strong> @formule.PlatStandard1</div>
                                                        @if (!string.IsNullOrEmpty(formule.GarnitureStandard1))
                                                        {
                                                            <div><strong>Garniture:</strong> @formule.GarnitureStandard1</div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non définie</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(formule.PlatStandard2))
                                                {
                                                    <div class="small">
                                                        <div><strong>Plat:</strong> @formule.PlatStandard2</div>
                                                        @if (!string.IsNullOrEmpty(formule.GarnitureStandard2))
                                                        {
                                                            <div><strong>Garniture:</strong> @formule.GarnitureStandard2</div>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non définie</span>
                                                }
                                            </td>
                                            <td>
                                                @if (formule.Verrouille)
                                                {
                                                    <span class="badge bg-warning">Verrouillée</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@formule.IdFormule" 
                                                       class="btn btn-outline-info" title="Voir les détails">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@formule.IdFormule" 
                                                       class="btn btn-outline-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formule ?');">
                                                        <input type="hidden" name="id" value="@formule.IdFormule" />
                                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        @await Html.PartialAsync("_Pagination", Model.Pagination)
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune formule trouvée</h5>
                            <p class="text-muted">Il n'y a actuellement aucune formule à afficher.</p>
                            <a asp-action="Create" class="btn btn-warning">
                                <i class="fas fa-plus me-1"></i>
                                Créer une nouvelle formule
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/date-inputs.css" />
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
        
        // Fonction pour changer la taille de page
        function changePageSize(pageSize) {
            const url = new URL(window.location);
            url.searchParams.set('pageSize', pageSize);
            url.searchParams.set('page', '1'); // Retourner à la première page
            window.location.href = url.toString();
        }
    </script>
}
