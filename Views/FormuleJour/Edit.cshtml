@model Obeli_K.Models.ViewModels.FormuleJourViewModel

@{
    ViewData["Title"] = "Modifier la Formule";
}

<style>
    .form-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 40px;
        margin: 20px auto;
        max-width: 1000px;
    }
    
    .date-header {
        font-size: 2.5rem;
        font-weight: bold;
        color: #1a365d;
        text-align: center;
        margin-bottom: 40px;
        text-transform: capitalize;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #1a365d;
        margin-bottom: 25px;
        padding-bottom: 10px;
        border-bottom: 3px solid #EDAC00;
    }
    
    .form-section {
        margin-bottom: 40px;
        padding: 25px;
        background: #f8f9fa;
        border-radius: 15px;
        border-left: 5px solid #EDAC00;
    }
    
    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #EDAC00;
        box-shadow: 0 0 0 0.2rem rgba(237, 172, 0, 0.25);
    }
    
    .form-label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #EDAC00, #f4c430);
        border: none;
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(237, 172, 0, 0.3);
    }
    
    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-secondary:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }
    
    .text-danger {
        color: #e53e3e !important;
        font-weight: 500;
    }
    
    .form-check-input:checked {
        background-color: #EDAC00;
        border-color: #EDAC00;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="form-container">
                <div class="date-header">
                    <i class="fas fa-edit me-3"></i>
                    Modifier la Formule
                </div>
                
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="IdFormule" type="hidden" />
                    
                    <!-- Informations générales -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-info-circle me-2"></i>
                            Informations générales
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Date" class="form-label">Date *</label>
                                    <input asp-for="Date" type="date" class="form-control" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NomFormule" class="form-label">Nom de la formule</label>
                                    <input asp-for="NomFormule" class="form-control" placeholder="Nom de la formule" />
                                    <span asp-validation-for="NomFormule" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formule Améliorée -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-utensils me-2"></i>
                            Formule Améliorée
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Entree" class="form-label">Entrée</label>
                                    <input asp-for="Entree" class="form-control" placeholder="Entrée" />
                                    <span asp-validation-for="Entree" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Plat" class="form-label">Plat</label>
                                    <input asp-for="Plat" class="form-control" placeholder="Plat principal" />
                                    <span asp-validation-for="Plat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Garniture" class="form-label">Garniture</label>
                                    <input asp-for="Garniture" class="form-control" placeholder="Garniture" />
                                    <span asp-validation-for="Garniture" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dessert" class="form-label">Dessert</label>
                                    <input asp-for="Dessert" class="form-control" placeholder="Dessert" />
                                    <span asp-validation-for="Dessert" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formule Standard 1 -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-star me-2"></i>
                            Standard 1
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PlatStandard1" class="form-label">Plat</label>
                                    <input asp-for="PlatStandard1" class="form-control" placeholder="Plat principal" />
                                    <span asp-validation-for="PlatStandard1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GarnitureStandard1" class="form-label">Garniture</label>
                                    <input asp-for="GarnitureStandard1" class="form-control" placeholder="Garniture" />
                                    <span asp-validation-for="GarnitureStandard1" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formule Standard 2 -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-star me-2"></i>
                            Standard 2
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PlatStandard2" class="form-label">Plat</label>
                                    <input asp-for="PlatStandard2" class="form-control" placeholder="Plat principal" />
                                    <span asp-validation-for="PlatStandard2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GarnitureStandard2" class="form-label">Garniture</label>
                                    <input asp-for="GarnitureStandard2" class="form-control" placeholder="Garniture" />
                                    <span asp-validation-for="GarnitureStandard2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Compléments -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-plus me-2"></i>
                            Compléments
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Feculent" class="form-label">Féculent</label>
                                    <input asp-for="Feculent" class="form-control" placeholder="Féculent" />
                                    <span asp-validation-for="Feculent" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Legumes" class="form-label">Légumes</label>
                                    <input asp-for="Legumes" class="form-control" placeholder="Légumes" />
                                    <span asp-validation-for="Legumes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Marge" class="form-label">Marge (%)</label>
                                    <input asp-for="Marge" type="number" class="form-control" placeholder="Marge" min="0" max="100" />
                                    <span asp-validation-for="Marge" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statut et verrouillage -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-cog me-2"></i>
                            Statut et verrouillage
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Statut" class="form-label">Statut</label>
                                    <select asp-for="Statut" class="form-control">
                                        <option value="">Sélectionnez un statut</option>
                                        <option value="0">Brouillon</option>
                                        <option value="1">Validé</option>
                                        <option value="2">Archivé</option>
                                    </select>
                                    <span asp-validation-for="Statut" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Verrouille" class="form-check-input" type="checkbox" />
                                        <label asp-for="Verrouille" class="form-check-label">
                                            Formule verrouillée
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Historique -->
                    <div class="form-section">
                        <div class="section-title">
                            <i class="fas fa-history me-2"></i>
                            Historique
                        </div>
                        <div class="mb-3">
                            <label asp-for="Historique" class="form-label">Historique</label>
                            <textarea asp-for="Historique" class="form-control" rows="4" placeholder="Historique des modifications..."></textarea>
                            <span asp-validation-for="Historique" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Retour à la liste
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    Modifier la formule
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
