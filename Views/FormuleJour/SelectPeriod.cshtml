@{
    ViewData["Title"] = "Sélection de Période";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Sélection de Période
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Sélectionnez la période pour laquelle vous souhaitez créer des formules. 
                        Le système vérifiera s'il existe déjà des formules pour cette période.
                    </p>
                    
                    <form asp-action="SelectPeriod" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="date-input-container">
                                    <label for="dateDebut" class="form-label">
                                        <i class="fas fa-calendar-day"></i>
                                        Date de début
                                    </label>
                                    <input type="date" id="dateDebut" name="dateDebut" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="date-input-container">
                                    <label for="dateFin" class="form-label">
                                        <i class="fas fa-calendar-day"></i>
                                        Date de fin
                                    </label>
                                    <input type="date" id="dateFin" name="dateFin" class="form-control" required />
                                </div>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-search me-1"></i>
                                Vérifier la période
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/date-inputs.css" />
    <script>
        // Définir la date de début par défaut (aujourd'hui)
        document.getElementById('dateDebut').valueAsDate = new Date();
        
        // Définir la date de fin par défaut (dans 7 jours)
        const dateFin = new Date();
        dateFin.setDate(dateFin.getDate() + 7);
        document.getElementById('dateFin').valueAsDate = dateFin;
    </script>
}
