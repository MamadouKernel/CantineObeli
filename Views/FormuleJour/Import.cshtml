@model Obeli_K.Models.ViewModels.ImportFormuleViewModel

@{
    ViewData["Title"] = "Importer des Formules";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-import text-warning me-2"></i>
                        Importer des Formules
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ImportErrors"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Erreurs d'importation :</h6>
                            <ul class="mb-0">
                                @foreach (var error in (List<string>)TempData["ImportErrors"])
                                {
                                    <li>@error</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Import" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="mb-4">
                                    <label asp-for="FichierExcel" class="form-label"></label>
                                    <input asp-for="FichierExcel" type="file" class="form-control" accept=".xlsx,.xls,.csv" />
                                    <span asp-validation-for="FichierExcel" class="text-danger"></span>
                                    <div class="form-text">Formats acceptés : .xlsx, .xls (recommandé : .xlsx)</div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DateDebut" class="form-label"></label>
                                            <input asp-for="DateDebut" type="date" class="form-control" />
                                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                                            <div class="form-text">Filtrer les formules à partir de cette date (optionnel)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DateFin" class="form-label"></label>
                                            <input asp-for="DateFin" type="date" class="form-control" />
                                            <span asp-validation-for="DateFin" class="text-danger"></span>
                                            <div class="form-text">Filtrer les formules jusqu'à cette date (optionnel)</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RemplacerExistantes" class="form-check-input" />
                                        <label asp-for="RemplacerExistantes" class="form-check-label"></label>
                                        <div class="form-text">Si une formule existe déjà pour une date, la remplacer</div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IgnorerErreurs" class="form-check-input" />
                                        <label asp-for="IgnorerErreurs" class="form-check-label"></label>
                                        <div class="form-text">Continuer l'import même en cas d'erreurs sur certaines lignes</div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour à la liste
                                    </a>
                                    <div>
                                        <a asp-action="DownloadTemplate" class="btn btn-info me-2">
                                            <i class="fas fa-download me-1"></i>
                                            Télécharger le modèle
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-upload me-1"></i>
                                            Importer
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Instructions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <h6>Format du fichier :</h6>
                                    <p class="small">Le fichier doit contenir les colonnes suivantes :</p>
                                    <ul class="small">
                                        <li><strong>Date</strong> : Date de la formule (YYYY-MM-DD)</li>
                                        <li><strong>NomFormule</strong> : Nom de la formule</li>
                                        <li><strong>Entree</strong> : Entrée (formule améliorée)</li>
                                        <li><strong>Plat</strong> : Plat principal (formule améliorée)</li>
                                        <li><strong>Garniture</strong> : Garniture (formule améliorée)</li>
                                        <li><strong>Dessert</strong> : Dessert (formule améliorée)</li>
                                        <li><strong>PlatStandard1</strong> : Plat standard 1</li>
                                        <li><strong>GarnitureStandard1</strong> : Garniture standard 1</li>
                                        <li><strong>PlatStandard2</strong> : Plat standard 2</li>
                                        <li><strong>GarnitureStandard2</strong> : Garniture standard 2</li>
                                        <li><strong>Feculent</strong> : Féculent commun</li>
                                        <li><strong>Legumes</strong> : Légumes communs</li>
                                        <li><strong>Marge</strong> : Marge (0-100, peut être vide)</li>
                                        <li><strong>Statut</strong> : Statut (1=actif, 0=inactif)</li>
                                    </ul>
                                    
                                    <h6 class="mt-3">Conseils :</h6>
                                    <ul class="small">
                                        <li>Téléchargez d'abord le modèle Excel (.xlsx) pour voir le format</li>
                                        <li>Le modèle contient des exemples et des instructions détaillées</li>
                                        <li>Les champs vides seront ignorés</li>
                                        <li>Vérifiez les dates avant l'import</li>
                                        <li>Les formules existantes peuvent être remplacées</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alerts after 10 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 10000);
    </script>
}
