@model Obeli_K.Models.ViewModels.ImportFormuleViewModel

@{
    ViewData["Title"] = "Importer des Formules";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-import text-warning me-2"></i>
                        Importer des Formules
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ImportErrors"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Erreurs d'importation détectées :</h6>
                            <div class="mt-3">
                                @foreach (var error in (List<string>)TempData["ImportErrors"])
                                {
                                    <div class="mb-2 p-2 bg-light border-start border-warning border-3">
                                        <small class="text-muted">
                                            <i class="fas fa-file-excel me-1"></i>
                                            @error
                                        </small>
                                    </div>
                                }
                            </div>
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>💡 Conseil :</strong> Corrigez ces erreurs dans votre fichier Excel et relancez l'importation.
                                </small>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Import" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="mb-4">
                                    <label asp-for="FichierExcel" class="form-label"></label>
                                    <input asp-for="FichierExcel" type="file" class="form-control" accept=".xlsx,.xls,.csv" />
                                    <span asp-validation-for="FichierExcel" class="text-danger"></span>
                                    <div class="form-text">Formats acceptés : .xlsx, .xls (recommandé : .xlsx)</div>
                                </div>


                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RemplacerExistantes" class="form-check-input" />
                                        <label asp-for="RemplacerExistantes" class="form-check-label"></label>
                                        @* <div class="form-text">Si une formule existe déjà pour une date, la remplacer</div> *@
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IgnorerErreurs" class="form-check-input" />
                                        <label asp-for="IgnorerErreurs" class="form-check-label"></label>
                                        <div class="form-text">Continuer l'import même en cas d'erreurs sur certaines lignes</div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour
                                    </a>
                                    <div>
                                        <a asp-action="DownloadTemplate" class="btn btn-info me-2">
                                            <i class="fas fa-download me-1"></i>
                                            Télécharger le modèle
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-upload me-1"></i>
                                            Importer
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Instructions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <h6>🎯 Comment ça marche :</h6>
                                    <p class="small">Chaque ligne de votre fichier Excel = <strong>1 formule distincte</strong></p>
                                    
                                    <h6>📊 Types de formules :</h6>
                                    <ul class="small">
                                        <li><strong>Formule Améliorée</strong> : Entrée + Plat + Garniture + Dessert + Féculent + Légumes</li>
                                        <li><strong>Formule Standard 1</strong> : PlatStandard1 + GarnitureStandard1</li>
                                        <li><strong>Formule Standard 2</strong> : PlatStandard2 + GarnitureStandard2</li>
                                    </ul>
                                    
                                    <h6>✅ Règles importantes :</h6>
                                    <ul class="small">
                                        <li><strong>Date</strong> et <strong>NomFormule</strong> sont obligatoires</li>
                                        <li><strong>Format de date</strong> : DD/MM/YYYY (ex: 15/01/2024) ou YYYY-MM-DD (ex: 2024-01-15)</li>
                                        <li>Pour créer une formule, remplissez au moins un champ correspondant</li>
                                        <li>Vous pouvez créer 1, 2 ou 3 formules par date</li>
                                        <li>Les champs vides ne créent pas de formules vides</li>
                                    </ul>
                                    
                                    <h6 class="mt-3">💡 Conseils :</h6>
                                    <ul class="small">
                                        <li>Téléchargez d’abord le modèle Excel pour voir des exemples</li>
                                        <li>Le modèle montre comment créer 1, 2 ou 3 formules</li>
                                        <li>Regroupez vos formules par date pour une meilleure organisation</li>
                                        <li>Utilisez des noms cohérents : « Formule améliorée », « Formule standard 1 », etc.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alerts after 10 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 10000);
    </script>
}
