@model List<Obeli_K.Models.FormuleJour>

@{
    ViewData["Title"] = "Formules Existantes";
    var dateDebut = ViewBag.DateDebut as DateTime?;
    var dateFin = ViewBag.DateFin as DateTime?;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Formules Existantes Détectées
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Attention :</strong> Il existe déjà des formules pour la période du 
                        <strong>@dateDebut?.ToString("dd/MM/yyyy")</strong> au 
                        <strong>@dateFin?.ToString("dd/MM/yyyy")</strong>.
                    </div>

                    <h5 class="mb-3">
                        <i class="fas fa-list me-2"></i>
                        Formules existantes (@Model.Count)
                    </h5>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Nom de la formule</th>
                                    <th>Type</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var formule in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-calendar-day me-1"></i>
                                            @formule.Date.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            <strong>@(formule.NomFormule ?? "Sans nom")</strong>
                                        </td>
                                        <td>
                                            @if (formule.NomFormuleNavigation != null)
                                            {
                                                <span class="badge bg-primary">@formule.NomFormuleNavigation.Nom</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Non défini</span>
                                            }
                                        </td>
                                        <td>
                                            @if (formule.Verrouille)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-lock me-1"></i>Verrouillé
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-unlock me-1"></i>Modifiable
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@formule.IdFormule" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Voir
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@formule.IdFormule" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i>Modifier
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="alert alert-info mt-4">
                        <i class="fas fa-lightbulb me-2"></i>
                        <strong>Options disponibles :</strong>
                        <ul class="mb-0 mt-2">
                            <li>Modifier les formules existantes</li>
                            <li>Choisir une autre période</li>
                            <li>Créer de nouvelles formules pour les dates libres</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Create" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Choisir une autre période
                        </a>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-primary me-2">
                                <i class="fas fa-list me-1"></i>
                                Voir toutes les formules
                            </a>
                            <a asp-action="CreateFormules" asp-route-dateDebut="@dateDebut?.ToString("yyyy-MM-dd")" asp-route-dateFin="@dateFin?.ToString("yyyy-MM-dd")" class="btn btn-warning">
                                <i class="fas fa-plus me-1"></i>
                                Créer quand même
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
