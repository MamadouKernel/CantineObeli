@model Obeli_K.Models.ViewModels.ExtractionViewModel

@{
    ViewData["Title"] = "Extraction des Commandes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-export text-primary me-2"></i>
                        Extraction des Commandes
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            @TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Index" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DateDebut" class="form-label"></label>
                                            <input asp-for="DateDebut" type="date" class="form-control" />
                                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DateFin" class="form-label"></label>
                                            <input asp-for="DateFin" type="date" class="form-control" />
                                            <span asp-validation-for="DateFin" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" asp-controller="Commande" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour aux Commandes
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-percentage me-1"></i>
                                        Définir les Marges
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Informations
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <h6>Workflow d'extraction :</h6>
                                    <ul class="small">
                                        <li><strong>Étape 1 :</strong> Définir les marges des menus</li>
                                        <li><strong>Étape 2 :</strong> Extraire les commandes avec marges</li>
                                    </ul>
                                    
                                    <h6 class="mt-3">Étape 1 - Définir les marges :</h6>
                                    <ul class="small">
                                        <li>Sélectionnez la période des menus</li>
                                        <li>Visualisez les menus avec leurs marges actuelles</li>
                                        <li>Modifiez les marges individuellement</li>
                                        <li>Validez les nouvelles marges</li>
                                    </ul>
                                    
                                    <h6 class="mt-3">Étape 2 - Extraction :</h6>
                                    <ul class="small">
                                        <li>Choisissez la période d'extraction</li>
                                        <li>Visualisez les commandes <strong>précommandées</strong> par formule</li>
                                        <li>Exportez le rapport en Excel</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal d'extraction -->
<div class="modal fade" id="extractionModal" tabindex="-1" aria-labelledby="extractionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="extractionModalLabel">
                    <i class="fas fa-file-export me-2"></i>
                    Extraction des Commandes
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="extractionForm">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="modalDateDebut" class="form-label">Date de début</label>
                            <input type="date" id="modalDateDebut" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label for="modalDateFin" class="form-label">Date de fin</label>
                            <input type="date" id="modalDateFin" class="form-control" />
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="button" id="searchCommandesBtn" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>
                            Rechercher les Commandes
                        </button>
                    </div>
                </form>

                <div id="extractionResults" style="display: none;">
                    <!-- Les résultats seront affichés ici -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alerts after 10 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 10000);

        // Ouvrir la modal automatiquement si demandé
        @if (ViewBag.ShowModal == true)
        {
            <text>
            // Pré-remplir les dates dans la modal
            $('#modalDateDebut').val('@Model.DateDebut.ToString("yyyy-MM-dd")');
            $('#modalDateFin').val('@Model.DateFin.ToString("yyyy-MM-dd")');
            
            // Ouvrir la modal
            $('#extractionModal').modal('show');
            </text>
        }

        // Rechercher les commandes
        $('#searchCommandesBtn').click(function() {
            var dateDebut = $('#modalDateDebut').val();
            var dateFin = $('#modalDateFin').val();
            
            if (!dateDebut || !dateFin) {
                alert('Veuillez sélectionner les deux dates.');
                return;
            }

            // Afficher un indicateur de chargement
            $('#extractionResults').html('<div class="text-center"><i class="fas fa-spinner fa-spin"></i> Recherche en cours...</div>').show();

            // Appeler l'action ExtraireCommandes
            $.ajax({
                url: '@Url.Action("ExtraireCommandes", "Extraction")',
                type: 'POST',
                data: {
                    DateDebut: dateDebut,
                    DateFin: dateFin,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(data) {
                    $('#extractionResults').html(data);
                },
                error: function() {
                    $('#extractionResults').html('<div class="alert alert-danger">Erreur lors de la recherche des commandes.</div>');
                }
            });
        });

        // Set default date range (last 30 days)
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const thirtyDaysAgo = new Date(today.getTime() - (30 * 24 * 60 * 60 * 1000));
            
            const dateDebutInput = document.querySelector('input[name="DateDebut"]');
            const dateFinInput = document.querySelector('input[name="DateFin"]');
            
            if (dateDebutInput && !dateDebutInput.value) {
                dateDebutInput.value = thirtyDaysAgo.toISOString().split('T')[0];
            }
            if (dateFinInput && !dateFinInput.value) {
                dateFinInput.value = today.toISOString().split('T')[0];
            }
        });
    </script>
}
