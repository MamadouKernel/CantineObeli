@model IEnumerable<object>
@{
    ViewData["Title"] = "Exportations Prestataires";
    var prestataires = Model as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-download me-2"></i>
                        Extractions Commandes Semaine N+1
                    </h2>
                    <p class="text-muted mb-0">
                        Extraire les commandes de la semaine N+1 pour les prestataires
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("List")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Options d'exportation -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-excel me-2"></i>
                        Options d'extraction
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a href="@Url.Action("ExportExcel")" class="btn btn-success btn-lg">
                                    <i class="fas fa-file-excel me-2"></i>
                                    Exporter en Excel
                                </a>
                            </div>
                            <p class="text-muted mt-2 mb-0">
                                <small>Extrait les commandes de la semaine N+1 au format Excel (.xlsx)</small>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <button type="button" class="btn btn-outline-primary btn-lg" disabled>
                                    <i class="fas fa-file-pdf me-2"></i>
                                    Exporter en PDF
                                </button>
                            </div>
                            <p class="text-muted mt-2 mb-0">
                                <small>Fonctionnalité à venir - Extraction PDF des commandes</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Aperçu des données -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Aperçu des commandes à extraire
                    </h5>
                </div>
                <div class="card-body">
                    @if (!prestataires.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-2x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune donnée à exporter</h5>
                            <p class="text-muted">Aucune commande de la semaine N+1 trouvée.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Téléphone</th>
                                        <th>Adresse</th>
                                        <th>Créé le</th>
                                        <th>Créé par</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prestataire in prestataires)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@prestataire.Nom</strong>
                                            </td>
                                            <td>@prestataire.Contact</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(prestataire.Email))
                                                {
                                                    <span class="text-primary">@prestataire.Email</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(prestataire.Telephone))
                                                {
                                                    <span class="text-primary">@prestataire.Telephone</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@prestataire.Adresse</td>
                                            <td>@prestataire.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                            <td>@prestataire.CreatedBy</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>@prestataires.Count()</strong> commande(s) de la semaine N+1 seront extraite(s) au format Excel.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Informations sur l'export -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations sur l'extraction
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Format Excel (.xlsx)</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Compatible avec Microsoft Excel</li>
                                <li><i class="fas fa-check text-success me-2"></i>Compatible avec LibreOffice Calc</li>
                                <li><i class="fas fa-check text-success me-2"></i>Compatible avec Google Sheets</li>
                                <li><i class="fas fa-check text-success me-2"></i>Formatage automatique des colonnes</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Colonnes incluses</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-id-card me-2"></i>Matricule (UserName)</li>
                                <li><i class="fas fa-user me-2"></i>Nom & Prénoms</li>
                                <li><i class="fas fa-calendar me-2"></i>Date de commande</li>
                                <li><i class="fas fa-utensils me-2"></i>Formule</li>
                                <li><i class="fas fa-tags me-2"></i>Type de formule</li>
                                <li><i class="fas fa-hashtag me-2"></i>Quantité</li>
                                <li><i class="fas fa-money-bill me-2"></i>Prix avec marge</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Confirmation avant export
    document.querySelector('a[href*="ExportExcel"]').addEventListener('click', function(e) {
        const count = @prestataires.Count();
        if (count === 0) {
            e.preventDefault();
            alert('Aucune donnée à exporter.');
            return;
        }
        
        const message = `Êtes-vous sûr de vouloir extraire ${count} commande(s) de la semaine N+1 au format Excel ?`;
        if (!confirm(message)) {
            e.preventDefault();
        }
    });
</script>
}
