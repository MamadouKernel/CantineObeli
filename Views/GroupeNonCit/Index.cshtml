@model IEnumerable<Obeli_K.Models.GroupeNonCit>

@{
    ViewData["Title"] = "Quotas Permanents des Groupes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-users me-2"></i>
                            Quotas Permanents des Groupes
                        </h4>
                        <div>
                            <a href="@Url.Action("Create", "GroupeNonCit")" 
                               class="btn btn-success btn-sm" 
                               title="Créer un nouveau groupe non-CIT">
                                <i class="fas fa-plus me-1"></i>
                                Créer un nouveau groupe
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <i class="fas fa-users me-1"></i>
                                            Groupe
                                        </th>
                                        <th>
                                            <i class="fas fa-info-circle me-1"></i>
                                            Description
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-sun me-1"></i>
                                            Quota Jour
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-moon me-1"></i>
                                            Quota Nuit
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-shield-alt me-1"></i>
                                            Standard Uniquement
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cogs me-1"></i>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var groupe in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-info me-2">
                                                        <i class="fas fa-users"></i>
                                                    </span>
                                                    <div>
                                                        <strong>@groupe.Nom</strong>
                                                        @if (!string.IsNullOrEmpty(groupe.CodeGroupe))
                                                        {
                                                            <br><small class="text-muted">Code: @groupe.CodeGroupe</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">@(groupe.Description ?? "Aucune description")</span>
                                            </td>
                                            <td class="text-center">
                                                @if (groupe.QuotaJournalier.HasValue)
                                                {
                                                    <span class="badge bg-warning">
                                                        @groupe.QuotaJournalier.Value (permanent)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non défini</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (groupe.QuotaNuit.HasValue)
                                                {
                                                    <span class="badge bg-info">
                                                        @groupe.QuotaNuit.Value
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non défini</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (groupe.RestrictionFormuleStandard)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Oui
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times"></i> Non
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "GroupeNonCit", new { id = groupe.Id })" 
                                                       class="btn btn-sm btn-outline-info" 
                                                       title="Voir les détails">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "GroupeNonCit", new { id = groupe.Id })" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-controller="GroupeNonCit" method="post" 
                                                          style="display: inline;" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le groupe \'@groupe.Nom\' ?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@groupe.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun groupe non-CIT trouvé</h5>
                            <p class="text-muted mb-4">Créez votre premier groupe en cliquant sur le bouton "Créer un nouveau groupe".</p>
                            <a href="@Url.Action("Create", "GroupeNonCit")" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>
                                Créer un nouveau groupe
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.8em;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
    
    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>
