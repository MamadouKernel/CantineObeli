@model Obeli_K.Models.GroupeNonCit

@{
    ViewData["Title"] = "Créer un Groupe avec Quotas Permanents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Créer un nouveau Groupe avec Quotas Permanents
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nom" class="form-label">
                                    <i class="fas fa-users me-1"></i>
                                    Nom du Groupe <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nom" class="form-control" placeholder="Ex: Douaniers" required />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="CodeGroupe" class="form-label">
                                    <i class="fas fa-code me-1"></i>
                                    Code Groupe
                                </label>
                                <input asp-for="CodeGroupe" class="form-control" placeholder="Ex: DOU" maxlength="10" />
                                <span asp-validation-for="CodeGroupe" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Code utilisé pour identifier le groupe dans les commandes (optionnel)
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>
                                Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description du groupe (optionnel)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuotaJournalier" class="form-label">
                                    <i class="fas fa-sun me-1 text-warning"></i>
                                    Quota Permanent Jour
                                </label>
                                <input asp-for="QuotaJournalier" type="number" min="0" class="form-control" placeholder="Ex: 50" />
                                <span asp-validation-for="QuotaJournalier" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Nombre de plats disponibles par jour pour ce groupe (quota permanent, ne se décrémente pas)
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="QuotaNuit" class="form-label">
                                    <i class="fas fa-moon me-1 text-info"></i>
                                    Quota Permanent Nuit
                                </label>
                                <input asp-for="QuotaNuit" type="number" min="0" class="form-control" placeholder="Ex: 30" />
                                <span asp-validation-for="QuotaNuit" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Nombre de plats disponibles par nuit pour ce groupe (quota permanent, ne se décrémente pas)
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="RestrictionFormuleStandard" class="form-check-input" type="checkbox" />
                                <label asp-for="RestrictionFormuleStandard" class="form-check-label">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Restriction aux formules standard uniquement
                                </label>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Si activé, ce groupe ne peut commander que des plats standard (Standard 1, Standard 2). 
                                    Si désactivé, le groupe peut commander toutes les formules (Standard + Amélioré).
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-lightbulb me-2"></i>
                            <strong>Information :</strong> Les quotas permanents s'appliquent automatiquement chaque jour. 
                            Les plats consommés sont calculés en temps réel à partir des commandes du jour. 
                            Les quotas ne se décrémentent pas, ils sont toujours disponibles.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "GroupeNonCit")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>
                                Créer le groupe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-label {
        font-weight: 600;
        color: #495057;
    }
    
    .form-control:focus {
        border-color: #EDAC00;
        box-shadow: 0 0 0 0.2rem rgba(237, 172, 0, 0.25);
    }
    
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
    
    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
</style>

