@model dynamic
@using Obeli_K.Models.Enums
@using Obeli_K.Enums
@{
    ViewData["Title"] = "Commandes Visiteurs";
    var commandes = Model.Commandes as IEnumerable<dynamic>;
    var pagination = Model.Pagination as Obeli_K.Models.ViewModels.PaginationViewModel;
    var DirectionId = Model.DirectionId as Guid?;
    var dateDebut = Model.DateDebut as DateTime?;
    var dateFin = Model.DateFin as DateTime?;
}

<div class="container-fluid">
    <!-- Header responsive -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-list me-2"></i>
                        <span class="d-none d-sm-inline">Commandes des Visiteurs</span>
                        <span class="d-sm-none">Commandes Visiteurs</span>
                    </h2>
                    <p class="text-muted mb-0">
                        <span class="d-none d-md-inline">Consultez et filtrez les commandes des visiteurs par Direction et période.</span>
                        <span class="d-md-none">Filtrez par Direction et période</span>
                    </p>
                </div>
                <a href="@Url.Action("List")" class="btn btn-success w-100 w-sm-auto">
                    <i class="fas fa-plus me-1"></i>Nouvelle commande
                </a>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Filtres
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Commands">
                        <div class="row g-3">
                            <div class="col-12 col-md-3">
                                <label for="DirectionId" class="form-label">
                                    <i class="fas fa-building me-1"></i>Direction
                                </label>
                                <select name="DirectionId" id="DirectionId" class="form-select">
                                    <option value="">-- Toutes les Directions --</option>
                                    @if (ViewBag.Directions != null)
                                    {
                                        @foreach (var dept in ViewBag.Directions)
                                        {
                                            if (DirectionId == dept.Id)
                                            {
                                                <option value="@dept.Id" selected>@dept.Nom</option>
                                            }
                                            else
                                            {
                                                <option value="@dept.Id">@dept.Nom</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-3">
                                <label for="dateDebut" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Date de début
                                </label>
                                <input type="date" name="dateDebut" id="dateDebut" class="form-control" 
                                       value="@(dateDebut?.ToString("yyyy-MM-dd"))" />
                            </div>
                            
                            <div class="col-md-3">
                                <label for="dateFin" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Date de fin
                                </label>
                                <input type="date" name="dateFin" id="dateFin" class="form-control" 
                                       value="@(dateFin?.ToString("yyyy-MM-dd"))" />
                            </div>
                            
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-1"></i>Filtrer
                                </button>
                                <a href="@Url.Action("Commands")" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Effacer
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Résultats -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            <span class="d-none d-sm-inline">Résultats (@pagination.TotalItems commande(s))</span>
                            <span class="d-sm-none">@pagination.TotalItems commande(s)</span>
                        </h5>
                        <div>
                            <a href="@Url.Action("List")" class="btn btn-success w-100 w-sm-auto">
                                <i class="fas fa-plus me-1"></i>Nouvelle commande
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (commandes != null && commandes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-barcode me-1"></i>Code</th>
                                        <th><i class="fas fa-user me-1"></i>Visiteur</th>
                                        <th><i class="fas fa-phone me-1"></i>Téléphone</th>
                                        <th><i class="fas fa-calendar me-1"></i>Date commande</th>
                                        <th><i class="fas fa-utensils me-1"></i>Date consommation</th>
                                        <th><i class="fas fa-tag me-1"></i>Formule</th>
                                        <th><i class="fas fa-hashtag me-1"></i>Quantité</th>
                                        <th><i class="fas fa-info-circle me-1"></i>Statut</th>
                                        <th><i class="fas fa-user-tie me-1"></i>Créé par</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commande in commandes)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary font-monospace">@commande.CodeCommande</span>
                                            </td>
                                            <td>
                                                <strong>@commande.VisiteurNom</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(commande.VisiteurTelephone))
                                                {
                                                    <i class="fas fa-phone text-success me-1"></i>@commande.VisiteurTelephone
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non renseigné</span>
                                                }
                                            </td>
                                            <td>
                                                <i class="fas fa-clock text-info me-1"></i>
                                                @commande.Date.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar-day text-warning me-1"></i>
                                                @commande.DateConsommation?.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@commande.FormuleNom</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@commande.Quantite</span>
                                            </td>
                                            <td>
                                                @{
                                                    var statut = (StatutCommande)commande.StatusCommande;
                                                    var statutClass = statut switch
                                                    {
                                                        StatutCommande.Precommander => "bg-warning",
                                                        StatutCommande.Consommee => "bg-success",
                                                        StatutCommande.Annulee => "bg-danger",
                                                        StatutCommande.Indisponible => "bg-info",
                                                        StatutCommande.NonRecuperer => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statutText = statut switch
                                                    {
                                                        StatutCommande.Precommander => "Précommandée",
                                                        StatutCommande.Consommee => "Consommée",
                                                        StatutCommande.Annulee => "Annulée",
                                                        StatutCommande.Indisponible => "Indisponible",
                                                        StatutCommande.NonRecuperer => "Non récupérée",
                                                        _ => "Inconnu"
                                                    };
                                                }
                                                <span class="badge @statutClass">@statutText</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>@commande.CreatedBy
                                                    <br>
                                                    <i class="fas fa-clock me-1"></i>@commande.CreatedOn?.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (pagination.TotalPages > 1)
                        {
                            <nav aria-label="Pagination des commandes">
                                <ul class="pagination justify-content-center">
                                    @if (pagination.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Commands", new { 
                                                page = pagination.CurrentPage - 1, 
                                                DirectionId = DirectionId, 
                                                dateDebut = dateDebut?.ToString("yyyy-MM-dd"), 
                                                dateFin = dateFin?.ToString("yyyy-MM-dd") 
                                            })">
                                                <i class="fas fa-chevron-left"></i> Précédent
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, pagination.CurrentPage - 2); i <= Math.Min(pagination.TotalPages, pagination.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == pagination.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Commands", new { 
                                                page = i, 
                                                DirectionId = DirectionId, 
                                                dateDebut = dateDebut?.ToString("yyyy-MM-dd"), 
                                                dateFin = dateFin?.ToString("yyyy-MM-dd") 
                                            })">@i</a>
                                        </li>
                                    }

                                    @if (pagination.CurrentPage < pagination.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Commands", new { 
                                                page = pagination.CurrentPage + 1, 
                                                DirectionId = DirectionId, 
                                                dateDebut = dateDebut?.ToString("yyyy-MM-dd"), 
                                                dateFin = dateFin?.ToString("yyyy-MM-dd") 
                                            })">
                                                Suivant <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Aucune commande trouvée</h4>
                            <p class="text-muted">
                                @if (DirectionId.HasValue || dateDebut.HasValue || dateFin.HasValue)
                                {
                                    <span>Aucune commande ne correspond aux critères de recherche.</span>
                                }
                                else
                                {
                                    <span>Aucune commande de visiteur n'a encore été créée.</span>
                                }
                            </p>
                            <a href="@Url.Action("List")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Créer une commande
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit du formulaire quand les filtres changent
            const Directionselect = document.getElementById('DirectionId');
            const dateDebutInput = document.getElementById('dateDebut');
            const dateFinInput = document.getElementById('dateFin');
            
            // Optionnel : auto-submit sur changement (décommentez si souhaité)
            // Directionselect.addEventListener('change', function() {
            //     this.form.submit();
            // });
        });
    </script>
}
