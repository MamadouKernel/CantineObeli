@model Obeli_K.Models.ViewModels.PagedViewModel<object>

@{
    ViewData["Title"] = "Liste des Directions";
}

<div class="container mt-4">
    <!-- Header responsive -->
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-3">
        <div>
            <h2 class="mb-1"><i class="bi bi-building"></i> Liste des Directions</h2>
            <p class="text-muted mb-0 d-none d-sm-block">Gérer les directions organisationnelles</p>
        </div>
        <a href="@Url.Action("Create", "Direction")" class="btn btn-success w-100 w-sm-auto">
            <i class="bi bi-plus-circle"></i> Nouvelle Direction
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (ViewBag.Directions != null && ((IEnumerable<dynamic>)ViewBag.Directions).Any())
            {
                <!-- Vue Desktop - Tableau -->
                <div class="d-none d-lg-block">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Code</th>
                                    <th>Responsable</th>
                                    <th>Email</th>
                                    <th>Services</th>
                                    <th>Créé le</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var direction in ViewBag.Directions)
                                {
                                    <tr>
                                        <td>
                                            <strong>@direction.Nom</strong>
                                            @if (!string.IsNullOrEmpty(direction.Description))
                                            {
                                                <br /><small class="text-muted">@direction.Description</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(direction.Code))
                                            {
                                                <span class="badge bg-secondary">@direction.Code</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@(direction.Responsable ?? "-")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(direction.Email))
                                            {
                                                <a href="mailto:@direction.Email">@direction.Email</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@direction.NombreServices service(s)</span>
                                        </td>
                                        <td>
                                            @if (direction.CreatedOn != null)
                                            {
                                                @Convert.ToDateTime(direction.CreatedOn).ToString("dd/MM/yyyy")
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Direction", new { id = direction.Id })" 
                                                   class="btn btn-sm btn-info" title="Détails">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Direction", new { id = direction.Id })" 
                                                   class="btn btn-sm btn-warning" title="Modifier">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                        onclick="confirmDelete('@direction.Id', '@direction.Nom')" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Vue Mobile - Cartes -->
                <div class="d-lg-none">
                    <div class="row g-3">
                        @foreach (var direction in ViewBag.Directions)
                        {
                            <div class="col-12">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div class="flex-grow-1">
                                                <h5 class="card-title mb-1">@direction.Nom</h5>
                                                @if (!string.IsNullOrEmpty(direction.Code))
                                                {
                                                    <span class="badge bg-secondary mb-2">@direction.Code</span>
                                                }
                                                @if (!string.IsNullOrEmpty(direction.Description))
                                                {
                                                    <p class="text-muted small mb-2">@direction.Description</p>
                                                }
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Details", "Direction", new { id = direction.Id })">
                                                            <i class="bi bi-eye me-2"></i>Détails
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Edit", "Direction", new { id = direction.Id })">
                                                            <i class="bi bi-pencil me-2"></i>Modifier
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <button class="dropdown-item text-danger" onclick="confirmDelete('@direction.Id', '@direction.Nom')">
                                                            <i class="bi bi-trash me-2"></i>Supprimer
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        
                                        <div class="row g-2 text-sm">
                                            @if (!string.IsNullOrEmpty(direction.Responsable))
                                            {
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Responsable</small>
                                                    <span>@direction.Responsable</span>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(direction.Email))
                                            {
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Email</small>
                                                    <a href="mailto:@direction.Email" class="text-decoration-none">@direction.Email</a>
                                                </div>
                                            }
                                            <div class="col-6">
                                                <small class="text-muted d-block">Services</small>
                                                <span class="badge bg-info">@direction.NombreServices</span>
                                            </div>
                                            @if (direction.CreatedOn != null)
                                            {
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Créé le</small>
                                                    <span>@Convert.ToDateTime(direction.CreatedOn).ToString("dd/MM/yyyy")</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @if (Model.Pagination != null)
                {
                    <partial name="_Pagination" model="Model.Pagination" />
                }
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> Aucune direction trouvée.
                    <a href="@Url.Action("Create", "Direction")" class="alert-link">Créer la première direction</a>
                </div>
            }
        </div>
    </div>
</div>

<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id, nom) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer la direction "${nom}" ?\n\nCette action est irréversible.`)) {
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "Direction")/' + id;
                form.submit();
            }
        }
    </script>
}
