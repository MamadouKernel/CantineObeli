@model Obeli_K.Models.Direction

@{
    ViewData["Title"] = "Créer une Direction";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Créer une Nouvelle Direction
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label">
                                Nom de la Direction <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nom" class="form-control" placeholder="Ex: Direction Générale" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Code</label>
                            <input asp-for="Code" class="form-control" placeholder="Ex: DG" maxlength="10" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <small class="form-text text-muted">Code court pour identification (optionnel)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Description de la direction"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Responsable" class="form-label">Responsable</label>
                            <input asp-for="Responsable" class="form-control" placeholder="Nom du directeur" />
                            <span asp-validation-for="Responsable" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("List", "Direction")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Créer la Direction
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
