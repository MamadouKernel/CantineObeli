@{
    ViewData["Title"] = "Gestion des Directions";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-building"></i> Gestion des Directions
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead">
                        Gérez les directions de votre organisation. Les directions regroupent plusieurs Directions.
                    </p>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-list-ul"></i> Liste des Directions
                                    </h5>
                                    <p class="card-text">
                                        Consultez et gérez toutes les directions existantes.
                                    </p>
                                    <a href="@Url.Action("List", "Direction")" class="btn btn-primary">
                                        <i class="bi bi-eye"></i> Voir la liste
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-plus-circle"></i> Nouvelle Direction
                                    </h5>
                                    <p class="card-text">
                                        Créez une nouvelle direction dans votre organisation.
                                    </p>
                                    <a href="@Url.Action("Create", "Direction")" class="btn btn-success">
                                        <i class="bi bi-plus"></i> Créer une direction
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>Information :</strong> Les directions permettent d'organiser votre structure hiérarchique. 
                        Chaque direction peut contenir plusieurs Directions.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
