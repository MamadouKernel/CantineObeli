@model Obeli_K.Models.Direction

@{
    ViewData["Title"] = "Détails de la Direction";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-building"></i> Détails de la Direction
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Nom :</dt>
                                <dd class="col-sm-8"><strong>@Model.Nom</strong></dd>

                                <dt class="col-sm-4">Code :</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Code))
                                    {
                                        <span class="badge bg-secondary">@Model.Code</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Description :</dt>
                                <dd class="col-sm-8">@(Model.Description ?? "-")</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Responsable :</dt>
                                <dd class="col-sm-8">@(Model.Responsable ?? "-")</dd>

                                <dt class="col-sm-4">Email :</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-12">
                            <h5><i class="bi bi-diagram-3"></i> Services de cette Direction</h5>
                            
                            @if (ViewBag.Services != null && ((IEnumerable<dynamic>)ViewBag.Services).Any())
                            {
                                <div class="table-responsive mt-3">
                                    <table class="table table-sm table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Nom</th>
                                                <th>Code</th>
                                                <th>Responsable</th>
                                                <th>Utilisateurs</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var service in ViewBag.Services)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@service.Nom</strong>
                                                        @if (!string.IsNullOrEmpty(service.Description))
                                                        {
                                                            <br /><small class="text-muted">@service.Description</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(service.Code))
                                                        {
                                                            <span class="badge bg-secondary">@service.Code</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>@(service.Responsable ?? "-")</td>
                                                    <td><span class="badge bg-primary">@service.NombreUtilisateurs</span></td>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Service", new { id = service.Id })" 
                                                           class="btn btn-sm btn-info">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mt-3" role="alert">
                                    <i class="bi bi-info-circle"></i> Aucun service dans cette direction.
                                </div>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <strong>Créé le :</strong> 
                                @if (Model.CreatedOn != null)
                                {
                                    @Model.CreatedOn.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                @if (!string.IsNullOrEmpty(Model.CreatedBy))
                                {
                                    <span>par @Model.CreatedBy</span>
                                }
                            </small>
                        </div>
                        <div class="col-md-6">
                            @if (Model.ModifiedOn != null)
                            {
                                <small class="text-muted">
                                    <strong>Modifié le :</strong> @Model.ModifiedOn.Value.ToString("dd/MM/yyyy HH:mm")
                                    @if (!string.IsNullOrEmpty(Model.ModifiedBy))
                                    {
                                        <span>par @Model.ModifiedBy</span>
                                    }
                                </small>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("List", "Direction")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", "Direction", new { id = Model.Id })" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
