@{
    ViewData["Title"] = "Gestion des Services";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-diagram-3"></i> Gestion des Services
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead">
                        Gérez les services de votre organisation. Les services sont rattachés à des Directions.
                    </p>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-list-ul"></i> Liste des Services
                                    </h5>
                                    <p class="card-text">
                                        Consultez et gérez tous les services existants.
                                    </p>
                                    <a href="@Url.Action("List", "Service")" class="btn btn-primary">
                                        <i class="bi bi-eye"></i> Voir la liste
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-plus-circle"></i> Nouveau Service
                                    </h5>
                                    <p class="card-text">
                                        Créez un nouveau service dans un Direction.
                                    </p>
                                    <a href="@Url.Action("Create", "Service")" class="btn btn-success">
                                        <i class="bi bi-plus"></i> Créer un service
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>Information :</strong> Les services permettent d'organiser les équipes au sein des Directions. 
                        Chaque service peut contenir plusieurs utilisateurs.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
