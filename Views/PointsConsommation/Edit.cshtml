@model Obeli_K.Models.ViewModels.EditPointConsommationViewModel

@{
    ViewData["Title"] = "Modifier le Point de Consommation";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit text-warning me-2"></i>
                        Modifier le Point de Consommation
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="pointConsommationForm">
                        <input type="hidden" asp-for="IdPointConsommation" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DateConsommation" class="form-label"></label>
                                    <input asp-for="DateConsommation" type="date" class="form-control" />
                                    <span asp-validation-for="DateConsommation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TypeConsommation" class="form-label"></label>
                                    <select asp-for="TypeConsommation" class="form-select" asp-items="ViewBag.TypesConsommation">
                                        <option value="">Sélectionner un type</option>
                                    </select>
                                    <span asp-validation-for="TypeConsommation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Montant" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Montant" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                                        <span class="input-group-text">FCFA</span>
                                    </div>
                                    <span asp-validation-for="Montant" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Quantite" class="form-label"></label>
                                    <input asp-for="Quantite" type="number" min="1" class="form-control" />
                                    <span asp-validation-for="Quantite" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LieuConsommation" class="form-label"></label>
                                    <input asp-for="LieuConsommation" class="form-control" placeholder="Ex: Restaurant CIT, Cafétéria..." />
                                    <span asp-validation-for="LieuConsommation" class="text-danger"></span>
                                </div>
                            </div>
                            @if (ViewBag.Utilisateurs != null)
                            {
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="UtilisateurId" class="form-label"></label>
                                        <select asp-for="UtilisateurId" class="form-select" asp-items="ViewBag.Utilisateurs">
                                            <option value="">Sélectionner un utilisateur</option>
                                        </select>
                                        <span asp-validation-for="UtilisateurId" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description du point de consommation (optionnel)"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour à la liste
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-save me-1"></i>
                                        Enregistrer les modifications
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Validation du formulaire
            $('#pointConsommationForm').on('submit', function(e) {
                var isValid = true;
                
                // Vérifier que tous les champs obligatoires sont remplis
                if (!$('#TypeConsommation').val()) {
                    $('#TypeConsommation').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#TypeConsommation').removeClass('is-invalid');
                }
                
                if (!$('#Montant').val() || parseFloat($('#Montant').val()) <= 0) {
                    $('#Montant').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Montant').removeClass('is-invalid');
                }
                
                if (!$('#Quantite').val() || parseInt($('#Quantite').val()) < 1) {
                    $('#Quantite').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#Quantite').removeClass('is-invalid');
                }
                
                @if (ViewBag.Utilisateurs != null)
                {
                    <text>
                    if (!$('#UtilisateurId').val()) {
                        $('#UtilisateurId').addClass('is-invalid');
                        isValid = false;
                    } else {
                        $('#UtilisateurId').removeClass('is-invalid');
                    }
                    </text>
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Veuillez remplir tous les champs obligatoires.');
                }
            });
        });
    </script>
}
