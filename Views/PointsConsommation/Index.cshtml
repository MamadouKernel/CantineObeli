@model IEnumerable<Obeli_K.Models.ViewModels.PointConsommationListViewModel>

@{
    ViewData["Title"] = "Points de Consommation";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <!-- En-tête avec titre -->
                <div class="card-header bg-white border-0 pb-0">
                    <h3 class="card-title mb-3">
                        <i class="fas fa-utensils me-2" style="color: #EDAC00;"></i>
                        <span class="fw-bold">Points de Consommation</span>
                    </h3>
                </div>
                
                <!-- Section de filtres et actions avec fond jaune-or -->
                <div class="px-4 pb-3">
                    <div class="bg-light rounded-3 p-3" style="background: linear-gradient(135deg, #EDAC00 0%, #f4c430 100%) !important;">
                        <div class="row align-items-center g-3">
                            <!-- Filtres de dates -->
                            <div class="col-lg-6">
                                <form method="get" class="d-flex flex-wrap gap-2 align-items-center">
                                    <div class="input-group" style="width: 130px;">
                                        <span class="input-group-text bg-white border-0 py-1 px-2" style="font-size: 0.75rem;">
                                            <i class="fas fa-calendar-alt text-muted" style="font-size: 0.7rem;"></i>
                                        </span>
                                        <input type="date" name="dateDebut" class="form-control border-0 shadow-sm py-1" 
                                               value="@ViewBag.DateDebut" placeholder="Date début" style="font-size: 0.75rem;">
                                    </div>
                                    <div class="input-group" style="width: 130px;">
                                        <span class="input-group-text bg-white border-0 py-1 px-2" style="font-size: 0.75rem;">
                                            <i class="fas fa-calendar-alt text-muted" style="font-size: 0.7rem;"></i>
                                        </span>
                                        <input type="date" name="dateFin" class="form-control border-0 shadow-sm py-1" 
                                               value="@ViewBag.DateFin" placeholder="Date fin" style="font-size: 0.75rem;">
                                    </div>
                                    <button type="submit" class="btn btn-dark btn-sm px-2 py-1 shadow-sm" style="font-size: 0.75rem;">
                                        <i class="fas fa-search me-1" style="font-size: 0.7rem;"></i>Filtrer
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-outline-dark btn-sm px-2 py-1 shadow-sm" style="font-size: 0.75rem;">
                                        <i class="fas fa-times me-1" style="font-size: 0.7rem;"></i>Effacer
                                    </a>
                                </form>
                            </div>
                            
                            <!-- Prix des formules et actions -->
                            <div class="col-lg-6">
                                <div class="d-flex flex-wrap gap-3 align-items-center justify-content-lg-end">
                                    <!-- Affichage des prix des formules -->
                                    <div class="d-flex flex-wrap gap-2 align-items-center">
                                        <div class="badge bg-success px-2 py-1" style="font-size: 0.7rem;">
                                            <i class="fas fa-utensils me-1" style="font-size: 0.6rem;"></i>
                                            Standard: 550 FCFA
                                        </div>
                                        <div class="badge bg-warning px-2 py-1" style="font-size: 0.7rem;">
                                            <i class="fas fa-crown me-1" style="font-size: 0.6rem;"></i>
                                            Amélioré: 2800 FCFA
                                        </div>
                                    </div>
                                    
                                    @* Bouton Créer Points Manquants visible seulement pour Admin/RH *@
                                    @if (User.IsInRole("Administrateur") || User.IsInRole("RessourcesHumaines"))
                                    {
                                        <form method="post" asp-action="CreerPointsManquants">
                                            <button type="submit" class="btn btn-warning btn-sm px-2 py-1 shadow-sm fw-semibold" 
                                                    onclick="return confirm('Créer les points de consommation manquants pour les commandes consommées ?')"
                                                    style="font-size: 0.75rem;">
                                                <i class="fas fa-plus-circle me-1" style="font-size: 0.7rem;"></i>Créer Points Manquants
                                            </button>
                                        </form>
                                    }
                                    
                                    @* Bouton Corriger Types visible pour tous les utilisateurs *@
                                    <form method="post" asp-action="CorrigerTypesFormule">
                                        <button type="submit" class="btn btn-info btn-sm px-2 py-1 shadow-sm fw-semibold" 
                                                onclick="return confirm('Corriger les types de formule \'Inconnu\' ?')"
                                                style="font-size: 0.75rem;">
                                            <i class="fas fa-edit me-1" style="font-size: 0.7rem;"></i>Corriger Types
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            @TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                       @*  <strong>Information :</strong> Les points de consommation sont créés automatiquement lorsque les commandes sont validées par le prestataire. 
                        Chaque utilisateur a droit à un seul plat par jour. Utilisez les filtres ci-dessus pour afficher les points sur une période spécifique. *@
                        
                        @if (User.IsInRole("Administrateur") || User.IsInRole("RessourcesHumaines"))
                        {
                            <br><br>
                            <i class="fas fa-eye me-2 text-success"></i>
                            <strong class="text-success">Vue administrative :</strong> @("Acces complet a tous les utilisateurs.")
                        }
                        else
                        {
                            <br><br>
                            <i class="fas fa-user me-2 text-primary"></i>
                            <strong class="text-primary">Vue personnelle :</strong> @("Acces limite a vos donnees.")
                        }
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Type Formule</th>
                                        <th>Plat</th>
                                        <th>Commande</th>
                                        <th>Lieu</th>
                                        @if (User.IsInRole("Administrateur") || User.IsInRole("RessourcesHumaines") || !User.IsInRole("Employe"))
                                        {
                                            <th>Utilisateur</th>
                                            <th>Site</th>
                                        }
                                        <th>Montant</th>
                                        <th>Statut Commande</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var point in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold">@point.DateConsommation.ToString("dd/MM/yyyy")</span>
                                                <br>
                                                <small class="text-muted">@point.DateConsommation.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@point.TypeFormule</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(point.NomPlat))
                                                {
                                                    <span class="fw-bold text-primary">@point.NomPlat</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(point.CodeCommande))
                                                {
                                                    <span class="badge bg-secondary">@point.CodeCommande</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(point.LieuConsommation))
                                                {
                                                    <span>@point.LieuConsommation</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            @if (User.IsInRole("Administrateur") || User.IsInRole("RessourcesHumaines") || !User.IsInRole("Employe"))
                                            {
                                                <td>
                                                    @if (!string.IsNullOrEmpty(point.UtilisateurNomComplet))
                                                    {
                                                        <div>
                                                            <strong>@point.UtilisateurNomComplet</strong>
                                                            <br>
                                                            <small class="text-muted">@point.UtilisateurMatricule</small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (point.UtilisateurSite.HasValue)
                                                    {
                                                        @switch (point.UtilisateurSite.Value)
                                                        {
                                                            case Obeli_K.Models.Enums.SiteType.CIT_Terminal:
                                                                <span class="badge bg-info">CIT Terminal</span>
                                                                break;
                                                            case Obeli_K.Models.Enums.SiteType.CIT_Billing:
                                                                <span class="badge bg-info">CIT Billing</span>
                                                                break;
                                                            default:
                                                                <span class="badge bg-secondary">@point.UtilisateurSite.Value</span>
                                                                break;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Non spécifié</span>
                                                    }
                                                </td>
                                            }
                                            <td>
                                                <div class="text-center">
                                                    <span class="fw-bold text-success fs-5">@point.Cout.ToString("N0")</span>
                                                    <br>
                                                    <small class="text-muted">FCFA</small>
                                                </div>
                                            </td>
                                            <td>
                                                @switch (point.StatusCommande)
                                                {
                                                    case 0: // Precommander
                                                        <span class="badge bg-warning">Précommandée</span>
                                                        break;
                                                    case 1: // Consommee
                                                        <span class="badge bg-success">Consommée</span>
                                                        break;
                                                    case 2: // Annulee
                                                        <span class="badge bg-danger">Annulée</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Inconnu</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="row">
                                <div class="col-md-8 text-center">
                                    <p class="text-muted">
                                        <i class="fas fa-utensils me-1"></i>
                                        Total : <strong class="text-success">@Model.Count()</strong> plat(s) consommé(s) sur la période sélectionnée
                                        <br>
                                        <i class="fas fa-money-bill-wave me-1"></i>
                                        Coût total : <strong class="text-warning">@Model.Sum(p => p.Cout).ToString("N0") FCFA</strong>
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <form asp-action="ExporterExcel" method="post" class="d-inline">
                                        <input type="hidden" name="dateDebut" value="@ViewBag.DateDebut" />
                                        <input type="hidden" name="dateFin" value="@ViewBag.DateFin" />
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-file-excel me-2"></i>
                                            Exporter Excel
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        @* Résumé par utilisateur pour Admin/RH *@
                        @if ((User.IsInRole("Administrateur") || User.IsInRole("RessourcesHumaines")) && Model.Any())
                        {
                            <div class="mt-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-users me-2" style="color: #EDAC00;"></i>
                                    Résumé par utilisateur
                                </h5>
                                <div class="row">
                                    @{
                                        var resumeParUtilisateur = Model
                                            .GroupBy(p => new { p.UtilisateurNom, p.UtilisateurPrenoms, p.UtilisateurMatricule })
                                            .Select(g => new {
                                                NomComplet = $"{g.Key.UtilisateurPrenoms} {g.Key.UtilisateurNom}",
                                                Matricule = g.Key.UtilisateurMatricule,
                                                NombrePlats = g.Sum(p => p.QuantiteConsommee),
                                                CoutTotal = g.Sum(p => p.Cout),
                                                Site = g.First().UtilisateurSite
                                            })
                                            .OrderBy(u => u.NomComplet)
                                            .ToList();
                                    }
                                    
                                    @foreach (var utilisateur in resumeParUtilisateur)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card border-0 shadow-sm h-100">
                                                <div class="card-body p-3">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                            <i class="fas fa-user text-white" style="font-size: 0.9rem;"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0 fw-bold">@utilisateur.NomComplet</h6>
                                                            <small class="text-muted">@utilisateur.Matricule</small>
                                                        </div>
                                                    </div>
                                                    <div class="row text-center">
                                                        <div class="col-6">
                                                            <div class="border-end">
                                                                <div class="text-success fw-bold fs-5">@utilisateur.NombrePlats</div>
                                                                <small class="text-muted">Plat(s)</small>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="text-warning fw-bold fs-5">@utilisateur.CoutTotal.ToString("N0")</div>
                                                            <small class="text-muted">FCFA</small>
                                                        </div>
                                                    </div>
                                                    @if (utilisateur.Site.HasValue)
                                                    {
                                                        <div class="mt-2">
                                                            <span class="badge bg-info" style="font-size: 0.7rem;">
                                                                @utilisateur.Site.Value.ToString()
                                                            </span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun point de consommation trouvé</h5>
                            <p class="text-muted">Commencez par créer votre premier point de consommation.</p>
                            <a asp-action="Create" class="btn btn-warning">
                                <i class="fas fa-plus me-1"></i>
                                Créer un point de consommation
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

