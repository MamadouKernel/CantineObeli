@model Obeli_K.Models.ViewModels.PagedViewModel<object>
@{
    ViewData["Title"] = "Liste des Fonctions";
    var fonctions = ViewBag.Fonctions as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<div class="container-fluid">
    <!-- Header responsive -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center gap-3">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-list me-2"></i>
                        <span class="d-none d-sm-inline">Liste des Fonctions</span>
                        <span class="d-sm-none">Fonctions</span>
                    </h2>
                    <p class="text-muted mb-0">
                        @(Model.Pagination?.TotalItems ?? 0) fonction(s) trouvée(s)
                    </p>
                </div>
                <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100 w-lg-auto">
                    <!-- Sélecteur de taille de page - masqué sur mobile -->
                    <div class="d-none d-md-flex align-items-center">
                        <label for="pageSize" class="form-label me-2 mb-0 small text-nowrap">Par page:</label>
                        <select id="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                            <option value="5" selected="@(Model.Pagination?.PageSize == 5)">5</option>
                            <option value="10" selected="@(Model.Pagination?.PageSize == 10)">10</option>
                            <option value="25" selected="@(Model.Pagination?.PageSize == 25)">25</option>
                            <option value="50" selected="@(Model.Pagination?.PageSize == 50)">50</option>
                            <option value="100" selected="@(Model.Pagination?.PageSize == 100)">100</option>
                        </select>
                    </div>
                    <a href="@Url.Action("Create")" class="btn btn-primary w-100 w-sm-auto">
                        <i class="fas fa-plus me-2"></i>Nouvelle Fonction
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des fonctions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (!fonctions.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune fonction trouvée</h5>
                            <p class="text-muted">Commencez par créer votre première fonction.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Créer une fonction
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- Vue Desktop - Tableau -->
                        <div class="d-none d-lg-block">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Nom</th>
                                            <th>Description</th>
                                            <th>Utilisateurs</th>
                                            <th>Créé le</th>
                                            <th>Créé par</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var fonction in fonctions)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                            <i class="fas fa-briefcase"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-semibold">@fonction.Nom</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(fonction.Description?.ToString()))
                                                    {
                                                        <span class="text-muted">@fonction.Description</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@fonction.NombreUtilisateurs utilisateur(s)</span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @if (fonction.CreatedOn != null)
                                                        {
                                                            @(((DateTime)fonction.CreatedOn).ToString("dd/MM/yyyy"))
                                                        }
                                                    </small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@fonction.CreatedBy</small>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="@Url.Action("Details", new { id = fonction.Id })" 
                                                           class="btn btn-sm btn-outline-info" title="Voir les détails">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="@Url.Action("Edit", new { id = fonction.Id })" 
                                                           class="btn btn-sm btn-outline-warning" title="Modifier">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                onclick="confirmDelete('@fonction.Id', '@fonction.Nom', @fonction.NombreUtilisateurs)" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Vue Mobile - Cartes -->
                        <div class="d-lg-none">
                            <div class="row g-3">
                                @foreach (var fonction in fonctions)
                                {
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-3">
                                                    <div class="d-flex align-items-center flex-grow-1">
                                                        <div class="avatar-lg bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                            <i class="fas fa-briefcase"></i>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="card-title mb-1">@fonction.Nom</h6>
                                                            <div class="d-flex flex-wrap gap-2 mb-2">
                                                                <span class="badge bg-info">@fonction.NombreUtilisateurs utilisateur(s)</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="dropdown">
                                                        <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                                            <i class="fas fa-ellipsis-v"></i>
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <li>
                                                                <a class="dropdown-item" href="@Url.Action("Details", new { id = fonction.Id })">
                                                                    <i class="fas fa-eye me-2"></i>Détails
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = fonction.Id })">
                                                                    <i class="fas fa-edit me-2"></i>Modifier
                                                                </a>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <button class="dropdown-item text-danger" onclick="confirmDelete('@fonction.Id', '@fonction.Nom', @fonction.NombreUtilisateurs)">
                                                                    <i class="fas fa-trash me-2"></i>Supprimer
                                                                </button>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                
                                                <div class="row g-2 text-sm">
                                                    @if (!string.IsNullOrEmpty(fonction.Description?.ToString()))
                                                    {
                                                        <div class="col-12">
                                                            <small class="text-muted d-block">Description</small>
                                                            <span>@fonction.Description</span>
                                                        </div>
                                                    }
                                                    @if (fonction.CreatedOn != null)
                                                    {
                                                        <div class="col-6">
                                                            <small class="text-muted d-block">Créé le</small>
                                                            <span>@(((DateTime)fonction.CreatedOn).ToString("dd/MM/yyyy"))</span>
                                                        </div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(fonction.CreatedBy?.ToString()))
                                                    {
                                                        <div class="col-6">
                                                            <small class="text-muted d-block">Créé par</small>
                                                            <span>@fonction.CreatedBy</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <!-- Pagination -->
                        @if (Model.Pagination != null)
                        {
                            @await Html.PartialAsync("_Pagination", Model.Pagination)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer la fonction <strong id="fonctionName"></strong> ?</p>
                <div id="warningMessage" class="alert alert-warning" style="display: none;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Cette fonction est assignée à <strong id="userCount"></strong> utilisateur(s). 
                    Vous devez d'abord réassigner ou supprimer ces utilisateurs.
                </div>
                <p class="text-muted small">Cette action ne peut pas être annulée.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" id="deleteButton">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
        font-weight: 600;
    }
    
    .avatar-lg {
        width: 48px;
        height: 48px;
        font-size: 18px;
        font-weight: 600;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #6c757d;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
    
    .btn-group .btn:last-child {
        margin-right: 0;
    }
    
    @@media (max-width: 576px) {
        .card-body {
            padding: 1rem;
        }
        
        .avatar-lg {
            width: 40px;
            height: 40px;
            font-size: 16px;
        }
        
        .badge {
            font-size: 0.75rem;
        }
    }
</style>

<script>
    function confirmDelete(fonctionId, fonctionName, userCount) {
        document.getElementById('fonctionName').textContent = fonctionName;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + fonctionId;
        
        if (userCount > 0) {
            document.getElementById('warningMessage').style.display = 'block';
            document.getElementById('userCount').textContent = userCount;
            document.getElementById('deleteButton').disabled = true;
        } else {
            document.getElementById('warningMessage').style.display = 'none';
            document.getElementById('deleteButton').disabled = false;
        }
        
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }

    function changePageSize(pageSize) {
        var currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set('pageSize', pageSize);
        currentUrl.searchParams.set('page', '1'); // Revenir à la première page lors du changement de taille
        window.location.href = currentUrl.toString();
    }
</script>
