@{
    ViewData["Title"] = "Erreur serveur";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Erreur serveur
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-server fa-4x text-danger"></i>
                </div>
                
                <h5 class="text-danger mb-3">Erreur 500</h5>
                <p class="text-muted mb-4">
                    Une erreur interne du serveur s'est produite. Veuillez réessayer plus tard ou contacter l'administrateur.
                </p>
                
                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Retour au tableau de bord
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Page précédente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
