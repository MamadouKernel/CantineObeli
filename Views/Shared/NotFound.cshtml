@{
    ViewData["Title"] = "Page non trouvée";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="fas fa-search me-2"></i>Page non trouvée
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-exclamation-circle fa-4x text-warning"></i>
                </div>
                
                <h5 class="text-warning mb-3">Erreur 404</h5>
                <p class="text-muted mb-4">
                    La page que vous recherchez n'existe pas ou a été déplacée.
                </p>
                
                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Retour au tableau de bord
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Page précédente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
